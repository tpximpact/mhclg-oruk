{
	"compilerOptions": {
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": "./src/",
		"types": [
			"@testing-library/jest-dom"
		],
		"paths": {
			"@/components/*": [
				"components/*"
			],
			"@/*": [
				"*"
			]
		},
		"target": "ES2017"
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"src/components/MarkdownComponentFromFile.tsx",
		"jest.config.ts",
		"jest.setup.ts"
	],
	"exclude": [
		"node_modules"
	]
}